{
  "name": "点击百度图片更换当前页面的背景图片",
  "description": "",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "http://www.blogger.com/",
    "*://*/*",
    "unlimitedStorage"
  ],
  "background": {
     "scripts": ["scripts/background.js"],
     "persistent": false
  },
  "browser_action": {
      "default_title": "Set this page's color.",
      "default_icon": "icon.png",
      "default_popup": "popup.html"
  },
  "manifest_version": 2
}
